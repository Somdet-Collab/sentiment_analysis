<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/sentiment_analysis/db" VERSION="20200213" COMMENT="XMLDB file for Folder module"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="team" COMMENT="team details are stored here">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="teamcode" TYPE="char" LENGTH="4" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="teampk" TYPE="primary" FIELDS="id"/>
        <KEY NAME="coursepk" TYPE="foreign" FIELDS="course" REFTABLE="mdl_course" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="teamcode_uq" UNIQUE="true" FIELDS="teamcode"/>
      </INDEXES>  
    </TABLE>
    <TABLE NAME="team_member" COMMENT="member of each team is stored here">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="teamid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="studentID" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="team_mempk" TYPE="primary" FIELDS="id"/>
        <KEY Name="studentfk" TYPE="foreign" FIELDS="studentID" REFTABLE="user" REFFIELDS="id"/>
        <KEY Name="teamfk" TYPE="foreign" FIELDS="teamid" REFTABLE="team" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="evaluation" COMMENT="evaluation results are stored">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="evaluator" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="evaluatee" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="q1" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="q2" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="q3" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="q4" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="q5" TYPE="int" LENGTH="1" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="comment" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY Name="evaluatorfk" TYPE="foreign" FIELDS="evaluator" REFTABLE="team_member" REFFIELDS="id"/>
        <KEY Name="evaluateefk" TYPE="foreign" FIELDS="evaluatee" REFTABLE="team_member" REFFIELDS="id"/>
        <KEY NAME="coursepk" TYPE="foreign" FIELDS="course" REFTABLE="mdl_course" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="sentiment_analysis" COMMENT="The result after sentiment analysis">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="evaluationid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="sentimentscore" TYPE="float" LENGTH="10" DECIMALS="2" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="polarity" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="sa_pk" TYPE="primary" FIELDS="id"/>
        <KEY NAME="evaluatpk" TYPE="foreign" FIELDS="evaluationid" REFTABLE="evaluation" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>